<div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{!-- methode post menandakan bahwa dia mengirimkan data baru --}}
                <form method="post" action="/update-blog">
                {{!-- penanda data dari id yg mana yang diambil --}}
                <input type="hidden" name="id" value="{{data.id}}">
                    <h1 class="text-center mb-4">Edit Post Blog</h1>
                    <div class="form-group mb-3">
                        <label for="inputTitle">Title</label>
                        <input type="text" class="form-control" id="inputTitle" name="title" value="{{data.title}}"/>
                    </div>
                    <div class="form-group mb-3">
                        <label for="inputContent">Content</label>
                        <textarea class="form-control" id="inputContent" rows="10" name="content">{{data.content}}</textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label for="formFile" class="form-label">Upload Image</label>
                        <input class="form-control" type="file" id="inputImage">
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">Post Blog</button>
                </form>
            </div>
        </div>
        <hr class="my-4">
        <div id="contents" class="blog-list">

        </div>
    </div>  
</div> 
